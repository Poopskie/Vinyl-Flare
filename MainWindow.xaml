<Window x:Class="Vinyl_Flare.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vinyl_Flare"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="920"
        ResizeMode="CanResize"
        Background="Transparent"
        WindowStyle="SingleBorderWindow">
    <!--AllowsTransparency="True"-->

    <Border Background="LightGray" CornerRadius="20">


        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="0*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="450"/>
                <RowDefinition/>
            </Grid.RowDefinitions>


            <!-- Button to hide/unhide buttons -->
            <Button HorizontalAlignment="Center" 
                    Margin="10,10,10,0" VerticalAlignment="Top"
                        Width="75" Height="75">
                <Image Source="/rikakawai.jpg" HorizontalAlignment="Center"/>
            </Button>

            <StackPanel Margin="0,100,0,0">

                <RadioButton Content="Library" Height="50"
                             FontSize="14" FontFamily="Comic Sans MS"
                             Style="{StaticResource MenuButtonTheme}"/>


                <RadioButton Content="Garage" Height="50"
                             FontSize="14" FontFamily="Comic Sans MS"
                             Style="{StaticResource MenuButtonTheme}"/>



            </StackPanel>
            
            
        </Grid>


    </Border>

</Window>
